{
    "scripts": {
        "lint": "tslint -p .\\tsconfig.json --format codeFrame --fix **/*.ts -e **/node_modules/**",
        "prettier": "prettier --write tasks/**/*.ts **/*.json",
        "postinstall": "lerna bootstrap --loglevel silent",
        "test": "jest --ci",
        "build": "tsc -p ."
    },
    "devDependencies": {
        "@types/jest": "^23.0.0",
        "@types/node": "^10.5.2",
        "@types/q": "^1.5.0",
        "jest": "^23.4.0",
        "lerna": "^2.11.0",
        "lint-staged": "^7.1.3",
        "prettier": "^1.13.4",
        "tfx-cli": "^0.5.14",
        "ts-jest": "^22.4.6",
        "tslint": "^5.10.0",
        "typescript": "^2.9.2",
        "webpack": "^4.16.0",
        "yorkie": "^1.0.3"
    },
    "gitHooks": {
        "pre-commit": "lerna run --concurrency 1 --stream precommit",
        "post-commit": "git update-index --again"
    },
    "lint-staged": {
        "*.{ts}": [
            "tslint -p .\\tsconfig.json --fix --format prose",
            "prettier --write",
            "git add"
        ],
        "*.{json}": [
            "prettier --write",
            "git add"
        ]
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)spec)\\.(tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    },
    "dependencies": {
        "vsts-task-lib": "^2.6.0"
    }
}
